<% layout('./layouts/Boilerplate') %>

<body>
  <div class="card container my-3 p-3" style="width: 35rem">
    <div class="card-header">
      <h2><%= place.title %></h2>
    </div>
    <div class="img">
      <img
        src="<%=place.image%>"
        class="card-img-top"
        height="380px"
        alt="..."
      />
    </div>
    <div class="card-body">
      <p class="card-text"><%= place.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Location: <%= place.location %></li>
      <li class="list-group-item">Country: <%= place.country %></li>
      <li class="list-group-item">
        Price: ₹ <%= place.price.toLocaleString("en-In") %>
      </li>
    </ul>
    <%if(isAuthorizedToEdit){%>
    <div class="card-footer text-body-secondary d-flex justify-content-end">
      <form action="/edit/<%=place._id%>" method="GET" style="display: inline">
        <button class="btn btn-info m-1">Edit</button>
      </form>
      <form
        action="/<%=place._id%>?_method=DELETE"
        method="POST"
        style="display: inline"
      >
        <button class="btn btn-danger m-1">Delete</button>
      </form>
    </div>
    <%}%>
    <div class="card-footer text-body-secondary">
      <h4>Please Leave a Review</h4>
      <%if(isLoggedin){%>
      <form
        action="/listings/<%=place._id%>/reviews"
        method="POST"
        class="d-inline needs-validation"
        novalidate
      >
        <fieldset class="starability-heartbeat">
        <legend>First rating:</legend>
        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="rating" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="rating" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="rating" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="rating" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="rating" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
        <textarea
          class="form-control my-2"
          name="comment"
          placeholder="Enter a review"
          aria-label="Review"
          required
        ></textarea>
        <div class="invalid-feedback">Please Enter some Review</div>
        <button type="submit" class="btn btn-info m-1 mt-2 mb-3">Submit</button>
      </form>
      
      <%}else{%>
      <h3 class="my-3" style="color: red">Login to leave a review</h3>
      <button
        class="btn btn-primary m-2"
        data-bs-target="#exampleModalToggle"
        data-bs-toggle="modal"
      >
        Login
      </button>
      or
      <button
        class="btn btn-primary m-2"
        data-bs-target="#exampleModalToggle2"
        data-bs-toggle="modal"
      >
        Register
      </button>
      <%}%>

      <div class="row d-flex justify-content-center align-items-center">
        <div
          class="my-2 col-5"
          style="
            min-height: 8em;
            margin: auto;
            display: flex;
            justify-content: center;
            align-items: center;
          "
        >
          <h2 class="text-center" style="text-align: center">
          <%= netRating%>
          </h2>
        </div>
        <% if(place.reviews.length> 0) { %>
        <div class="card my-2 col-5 <%= place.reviews[0].isOwner ? "green":"" %>" style="min-height: 8em; margin: auto">
          <div
            class="card-body text-success d-flex flex-column my-0 justify-content-between "
          >
          <h4 class="d-inline p-0 text-start text-dark">@<%= place.reviews[0].ownerName %></h4>
            <p
              style="
                display: flex;
                align-items: center;
                justify-content: center;
                align-self: center;
                justify-self: center;
              "
            >
              <%= place.reviews[0].comment %>
            </p>
            <div class="d-flex justify-content-between p-1">
              <p class="d-inline p-0">
                <% for(let i=0; i<place.reviews[0].rating; i++){%>
                  ★
                <%}%>
              </p>
              <%if(place.reviews[0].isOwner){%>
              <form
                action="/listings/<%= place._id %>/reviews/<%= place.reviews[0]._id %>?_method=DELETE"
                method="POST"
                style="display: inline"
              >
                <button class="d-inline deleteBtn">
                  <svg
                    stroke="currentColor"
                    fill="currentColor"
                    stroke-width="0"
                    viewBox="0 0 24 24"
                    height="30px"
                    width="30px"
                  >
                    <path fill="none" d="M0 0h24v24H0z"></path>
                    <path fill="none" d="M0 0h24v24H0V0z"></path>
                    <path
                      d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zm2.46-7.12l1.41-1.41L12 12.59l2.12-2.12 1.41 1.41L13.41 14l2.12 2.12-1.41 1.41L12 15.41l-2.12 2.12-1.41-1.41L10.59 14l-2.13-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4z"
                    ></path>
                  </svg>
                </button>
              </form>
              <%}%>
            </div>
          </div>
        </div>
        <% if (place.reviews.length> 0) { %> <% for (let i=1; i <
        place.reviews.length; i++) { %>
        <div class="card my-2 col-5 <%= place.reviews[i].isOwner ? "green":"" %>" style="min-height: 8em; margin: auto ">
          <div
            class="card-body text-success d-flex flex-column my-0 justify-content-between "
          >
            <h4 class="d-inline p-0 text-start text-dark">@<%= place.reviews[i].ownerName %></h4>
            <p
              style="
                display: flex;
                align-items: center;
                justify-content: center;
                align-self: center;
                justify-self: center;
              "
            >
              <%= place.reviews[i].comment %>
            </p>
            <div class="d-flex justify-content-between p-1">
              <p class="d-inline p-0">
                <% for(let i=0; i<place.reviews[0].rating; i++){%>
                  ★
                <%}%>
              </p>
              <%if(place.reviews[i].isOwner){%>
              <form
                action="/listings/<%= place._id %>/reviews/<%= place.reviews[i]._id %>?_method=DELETE"
                method="POST"
                style="display: inline"
              >
                <button class="d-inline deleteBtn">
                  <svg
                    stroke="currentColor"
                    fill="currentColor"
                    stroke-width="0"
                    viewBox="0 0 24 24"
                    height="30px"
                    width="30px"
                  >
                    <path fill="none" d="M0 0h24v24H0z"></path>
                    <path fill="none" d="M0 0h24v24H0V0z"></path>
                    <path
                      d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zm2.46-7.12l1.41-1.41L12 12.59l2.12-2.12 1.41 1.41L13.41 14l2.12 2.12-1.41 1.41L12 15.41l-2.12 2.12-1.41-1.41L10.59 14l-2.13-2.12zM15.5 4l-1-1h-5l-1 1H5v2h14V4z"
                    ></path>
                  </svg>
                </button>
              </form>
              <%}%>
            </div>
          </div>
        </div>
        <% } %> <% } else { %> Be the first one to review <% } %> <%
        if(place.reviews.length % 2===0) { %>
        <div
          class="card my-2 col-5"
          style="min-height: 8em; margin: auto"
        ></div>
        <% } %> <% } else { %> Be the first one to review <% } %>
      </div>
    </div>
  </div>
</body>
